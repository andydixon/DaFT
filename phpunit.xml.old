<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
    <php>
        <ini name="error_reporting" value="-1"/>
        <var name="bootstrap" value="vendor/autoload.php"/>
    </php>

    <testsuites>
        <testsuite name="Application Test Suite">
            <directory suffix="Test.php">src/DaFT/tests</directory>
        </testsuite>
    </testsuites>

    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">src</directory>
        </include>
    </coverage>
</phpunit>
